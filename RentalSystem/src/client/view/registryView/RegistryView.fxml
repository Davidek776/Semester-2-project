<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.view.registryView.RegistryViewController">
   <children>
      <HBox layoutX="118.0" layoutY="73.0" prefHeight="180.0" prefWidth="420.0">
         <children>
            <VBox alignment="CENTER_RIGHT" prefHeight="191.0" prefWidth="147.0" spacing="30.0">
               <children>
                  <Label text="username:">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Label text="password:">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Label prefHeight="20.0" prefWidth="143.0" text="confirm password:">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Label text="phone number:">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets right="15.0" />
               </padding>
            </VBox>
            <VBox prefHeight="188.0" prefWidth="254.0" spacing="24.0">
               <children>
                  <TextField fx:id="userName">
                     <VBox.margin>
                        <Insets top="2.0" />
                     </VBox.margin></TextField>
                  <PasswordField fx:id="password" accessibleRole="PASSWORD_FIELD">
                     <VBox.margin>
                        <Insets top="3.0" />
                     </VBox.margin></PasswordField>
                  <PasswordField fx:id="confirmPassword">
                     <VBox.margin>
                        <Insets top="6.0" />
                     </VBox.margin></PasswordField>
                  <TextField fx:id="phoneNumber">
                     <VBox.margin>
                        <Insets top="4.0" />
                     </VBox.margin></TextField>
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </VBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <Label layoutX="264.0" layoutY="18.0" text="Register" textAlignment="CENTER">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <Label layoutX="86.0" layoutY="300.0" text="By creating an account, you agree to Jasna's Conditions of Use and Privacy Notice. " />
      <HBox alignment="CENTER" layoutX="207.0" layoutY="336.0" prefHeight="28.0" prefWidth="220.0" spacing="55.0">
         <children>
            <Button fx:id="loginButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#openLoginView" prefHeight="26.0" prefWidth="65.0" style="-fx-background-color: #268ceb;" text="Login" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Button>
            <Button mnemonicParsing="false" onAction="#createAccountButton" prefHeight="26.0" prefWidth="111.0" style="-fx-background-color: #268ceb;" text="Create Account" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Button>
         </children>
      </HBox>

   </children>
</AnchorPane>
