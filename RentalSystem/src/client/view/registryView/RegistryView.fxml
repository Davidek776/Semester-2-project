<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.PasswordField?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.view.registryView.RegistryViewController">
   <children>
      <HBox layoutX="118.0" layoutY="73.0" prefHeight="174.0" prefWidth="385.0">
         <children>
            <VBox alignment="CENTER_RIGHT" prefHeight="176.0" prefWidth="146.0" spacing="30.0">
               <children>
                  <Label text="username:">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Label text="password:">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Label prefHeight="20.0" prefWidth="143.0" text="confirm password:">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Label text="phone number:">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets right="15.0" />
               </padding>
            </VBox>
            <VBox prefHeight="188.0" prefWidth="254.0" spacing="24.0">
               <children>
                  <TextField fx:id="userName" />
                  <PasswordField fx:id="password" accessibleRole="PASSWORD_FIELD" />
                  <PasswordField fx:id="confirmPassword" />
                  <TextField fx:id="phoneNumber" />
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
      <Label layoutX="264.0" layoutY="18.0" text="Register" textAlignment="CENTER">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <Label layoutX="71.0" layoutY="279.0" text="By creating an account, you agree to Jasna's Conditions of Use and Privacy Notice. " />
      <HBox alignment="CENTER" layoutX="207.0" layoutY="336.0" prefHeight="28.0" prefWidth="220.0" spacing="55.0">
         <children>
            <Button fx:id="loginButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#openLoginView" prefHeight="26.0" prefWidth="65.0" style="-fx-background-color: transparent;" text="Login" />
            <Button mnemonicParsing="false" onAction="#createAccountButton" prefHeight="26.0" prefWidth="111.0" style="-fx-background-color: #0f5fff;" text="Create Account" textFill="WHITE" />
         </children>
      </HBox>

   </children>
</AnchorPane>
